    FOVCircle.Color = isAiming and _G.Color or Color3.fromRGB(100, 100, 100)
    FOVCircle.Transparency = drawingTransp

    if _G.ArmChams and _G.RGBMode then
        for v, _ in pairs(ActiveArmParts) do if v and v.Parent then v.Color = _G.Color else ActiveArmParts[v] = nil end end
    end

    for _, v in pairs(Players:GetPlayers()) do
        if v ~= LocalPlayer then
            local char = v.Character
            local hrp = char and char:FindFirstChild("HumanoidRootPart")
            local head = char and char:FindFirstChild("Head")
            local humanoid = char and char:FindFirstChild("Humanoid")
            local isEnemy = (not _G.TeamCheck or v.Team ~= LocalPlayer.Team)

            if char and hrp and head and humanoid and humanoid.Health > 0 and isEnemy then
                if _G.Hitbox then
                    local targetP = char:FindFirstChild(_G.TargetPart)
                    if targetP then
                        if not HitboxCache[targetP] then HitboxCache[targetP] = {Size = targetP.Size, Trans = targetP.Transparency, Col = targetP.CanCollide} end
                        targetP.Size = Vector3.new(_G.HitboxSize, _G.HitboxSize, _G.HitboxSize); targetP.Transparency = 0.6; targetP.CanCollide = false
                    end
                end

                local hl = char:FindFirstChild("DVZ_HL") or Instance.new("Highlight", char)
                hl.Name = "DVZ_HL"
                hl.Enabled = _G.ESP
                hl.FillColor = _G.Color
                hl.FillTransparency = robloxTransp
                hl.OutlineTransparency = robloxTransp

                local hrpPos, onScreen = Camera:WorldToViewportPoint(hrp.Position)
                
                if onScreen then
                    local headPos = Camera:WorldToViewportPoint(head.Position + Vector3.new(0, 0.5, 0))
                    local legPos = Camera:WorldToViewportPoint(hrp.Position - Vector3.new(0, 3, 0))
                    local height = headPos.Y - legPos.Y
                    local width = 1000 / hrpPos.Z

                    if _G.Tracers then
                        if not Drawings.Tracers[v] then Drawings.Tracers[v] = Drawing.new("Line"); Drawings.Tracers[v].Thickness = 1 end
                        Drawings.Tracers[v].Visible = true; Drawings.Tracers[v].From = Vector2.new(Camera.ViewportSize.X/2, Camera.ViewportSize.Y)
                        Drawings.Tracers[v].To = Vector2.new(hrpPos.X, hrpPos.Y)
                        Drawings.Tracers[v].Color = _G.Color
                        Drawings.Tracers[v].Transparency = drawingTransp
                    elseif Drawings.Tracers[v] then Drawings.Tracers[v].Visible = false end

                    if _G.BoxESP then
                        if not Drawings.Boxes[v] then Drawings.Boxes[v] = Drawing.new("Square"); Drawings.Boxes[v].Thickness = 1; Drawings.Boxes[v].Filled = false end
                        Drawings.Boxes[v].Visible = true; Drawings.Boxes[v].Size = Vector2.new(width, height)
                        Drawings.Boxes[v].Position = Vector2.new(hrpPos.X - width / 2, hrpPos.Y - height / 2)
                        Drawings.Boxes[v].Color = _G.Color
                        Drawings.Boxes[v].Transparency = drawingTransp
                    elseif Drawings.Boxes[v] then Drawings.Boxes[v].Visible = false end

                    if _G.NameESP then
                        if not Drawings.Names[v] then Drawings.Names[v] = Drawing.new("Text"); Drawings.Names[v].Size = 14; Drawings.Names[v].Center = true; Drawings.Names[v].Outline = true end
                        Drawings.Names[v].Visible = true; Drawings.Names[v].Position = Vector2.new(headPos.X, headPos.Y - 20)
                        Drawings.Names[v].Text = v.Name
                        Drawings.Names[v].Color = _G.Color
                        Drawings.Names[v].Transparency = drawingTransp
                    elseif Drawings.Names[v] then Drawings.Names[v].Visible = false end

                    if _G.HealthMode ~= "Desligado" then
                        local healthPct = math.clamp(humanoid.Health / humanoid.MaxHealth, 0, 1)
                        local barHeight = height * healthPct
                        local hpColor = Color3.new(1 - healthPct, healthPct, 0)
                        
                        if not Drawings.HealthOutlines[v] then
                            Drawings.HealthOutlines[v] = Drawing.new("Square"); Drawings.HealthOutlines[v].Filled = false; Drawings.HealthOutlines[v].Thickness = 1; Drawings.HealthOutlines[v].Color = Color3.new(0,0,0)
                            Drawings.HealthBars[v] = Drawing.new("Square"); Drawings.HealthBars[v].Filled = true; Drawings.HealthBars[v].Thickness = 1
                            Drawings.HealthTexts[v] = Drawing.new("Text"); Drawings.HealthTexts[v].Size = 13; Drawings.HealthTexts[v].Outline = true; Drawings.HealthTexts[v].Center = true
                        end
                        
                        if _G.HealthMode == "Barra" or _G.HealthMode == "Ambos" then
                            Drawings.HealthOutlines[v].Visible = true; Drawings.HealthOutlines[v].Size = Vector2.new(4, height + 2); Drawings.HealthOutlines[v].Position = Vector2.new(hrpPos.X - width / 2 - 8, hrpPos.Y - height / 2 - 1)
                            Drawings.HealthBars[v].Visible = true; Drawings.HealthBars[v].Size = Vector2.new(2, barHeight); Drawings.HealthBars[v].Position = Vector2.new(hrpPos.X - width / 2 - 7, hrpPos.Y - height / 2 + (height - barHeight)); Drawings.HealthBars[v].Color = hpColor
                            Drawings.HealthOutlines[v].Transparency = drawingTransp
                            Drawings.HealthBars[v].Transparency = drawingTransp
                        else Drawings.HealthOutlines[v].Visible = false; Drawings.HealthBars[v].Visible = false end

                        if _G.HealthMode == "Texto" or _G.HealthMode == "Ambos" then
                            Drawings.HealthTexts[v].Visible = true; Drawings.HealthTexts[v].Text = tostring(math.floor(healthPct * 100)) .. " HP"; Drawings.HealthTexts[v].Position = Vector2.new(hrpPos.X - width / 2 - 20, hrpPos.Y - height / 2 + (height - barHeight) - 5); Drawings.HealthTexts[v].Color = hpColor
                            Drawings.HealthTexts[v].Transparency = drawingTransp
                        else Drawings.HealthTexts[v].Visible = false end
                    elseif Drawings.HealthBars[v] then
                        Drawings.HealthOutlines[v].Visible = false; Drawings.HealthBars[v].Visible = false; Drawings.HealthTexts[v].Visible = false
                    end
                else ClearDrawings(v) end
            else ClearDrawings(v) if char and char:FindFirstChild("DVZ_HL") then char.DVZ_HL.Enabled = false end end
        end
    end

    if isAiming then
        local target, dist = nil, _G.FOV
        for _, v in pairs(Players:GetPlayers()) do
            if v ~= LocalPlayer and v.Character and v.Character:FindFirstChild(_G.TargetPart) and v.Character:FindFirstChild("Humanoid") and v.Character.Humanoid.Health > 0 then
                if (not _G.TeamCheck or v.Team ~= LocalPlayer.Team) then
                    local p = v.Character[_G.TargetPart]
                    local sPos, vis = Camera:WorldToViewportPoint(p.Position)
                    if vis and CheckWall(p) then
                        local mag = (Vector2.new(sPos.X, sPos.Y) - Vector2.new(Camera.ViewportSize.X/2, Camera.ViewportSize.Y/2)).Magnitude
                        if mag < dist then dist = mag; target = p end
                    end
                end
            end
        end
        if target then 
            local tCFrame = CFrame.new(Camera.CFrame.Position, target.Position)
            Camera.CFrame = _G.Smoothness < 100 and Camera.CFrame:Lerp(tCFrame, _G.Smoothness / 100) or tCFrame
        end
    end
end)

